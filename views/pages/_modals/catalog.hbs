<!-- Add catalog modal -->
<form action="/api/catalog/add" method="POST">
    <div class="modal fade js-add-catalog-modal" tabindex="-1" role="dialog" aria-labelledby="js-add-catalog-modal"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Catalog</h4>
                </div>
                <div class="modal-body">
                    <input name="property" type="hidden" value="{{property._id}}" required>
                    <div class="form-group mb-3">
                        <label>Name</label>
                        <input class="form-control" name="name" type="text" required>
                    </div>
                    <div class="form-group mb-3">
                        <label>Rate</label>
                        <input class="form-control" name="rate" type="number" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-custom-primary m-0 mr-2">Add</button>
                    <button type="button" class="btn btn-custom-cancel text-white m-0"
                        data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Update catalog modal -->
<form action="/api/catalog/update" method="POST">
    <div class="modal fade js-update-catalog-modal" tabindex="-1" role="dialog"
        aria-labelledby="js-update-catalog-modal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Update Catalog</h4>
                </div>
                <div class="modal-body">
                    <input name="property" type="hidden" value="{{property._id}}" required>
                    <input class="js-input-catalog-id" name="_id" type="hidden" required>
                    <div class="form-group mb-3">
                        <label>Name</label>
                        <input class="form-control js-input-catalog-name" name="name" type="text" required>
                    </div>
                    <div class="form-group mb-3">
                        <label>Rate</label>
                        <input class="form-control js-input-catalog-rate" name="rate" type="number" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-custom-primary m-0 mr-2">Save</button>
                    <button type="button" class="btn btn-custom-cancel text-white m-0"
                        data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Delete catalog modal -->
<form action="/api/catalog/delete" method="POST">
    <div class="modal fade js-delete-catalog-modal" tabindex="-1" role="dialog"
        aria-labelledby="js-delete-catalog-modal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Catalog</h4>
                </div>
                <div class="modal-body">
                    <input name="property" type="hidden" value="{{property._id}}" required>
                    <input class="js-input-catalog-id" name="_id" type="hidden" required>
                    <div class="form-group mb-3">
                        <label>Name</label>
                        <input class="form-control js-input-catalog-name" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label>Rate</label>
                        <input class="form-control js-input-catalog-rate" disabled>
                    </div>
                    <div class="mt-4 p-1">
                        <div class="d-flex flex-column">
                            <span>Note:</span>
                            <p class="text-13">
                                Catalogs that are currently being used cannot be deleted.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn red darken-3 text-white mr-2">Confirm deletion</button>
                    <button type="button" class="btn btn-custom-cancel text-white m-0"
                        data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>