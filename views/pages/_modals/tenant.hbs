                                <h5>Contact information</h5>
                                <div class="form-group">
                                    <label>Mobile</label>
                                    <input class="form-control js-input-tenant-mobile" disabled>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control js-input-tenant-email" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <header>
                                <h5>Room information</h5>
                            </header>
                            <section>
