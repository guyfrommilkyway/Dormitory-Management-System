                                </header>
                                <section>
                                    <div class="form-group">
                                        <label>First name</label>
                                        <input class="form-control js-input-tenant-first-name" name="first_name"
                                            type="text" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Last name</label>
                                        <input class="form-control js-input-tenant-last-name" name="last_name"
                                            type="text" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Birthday</label>
                                        <input class="form-control js-input-tenant-birthday" name="birthday" type="date"
                                            required>
                                    </div>
                                </section>
                            </section>
                            <section>
                                <header>
                                    <h5>Contact information</h5>
                                </header>
                                <section>
                                    <div class="form-group">
                                        <label>Mobile</label>
                                        <input class="form-control js-input-tenant-mobile" name="mobile" type="text"
                                            required>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control js-input-tenant-email" name="email" type="email"
                                            required>
                                    </div>
                                </section>
                            </section>
                        </div>
                        <div class="col-md-6">
                            <header>
                                <h5>Room information</h5>
                            </header>
                            <section>
                                <div class="form-group">
                                    <label>Room</label>
                                    <div class="form-group">
                                        <select class="form-control js-select-tenant-room" name="room" required>
                                            {{#each rooms }}
                                            <option {{#if tenant}}class="occupied" disabled{{/if}} value="{{_id}}">
                                                {{name}} -
                                                Floor {{floor}} - {{catalog.name}} - {{catalog.rate}}
                                            </option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-submit">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

