<div class="border rounded p-4">
    <div class="table-responsive text-nowrap">
        <table class="table js-table-property" style="width: 100%;">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th class="text-right">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each properties}}
                <tr>
                    <td>
                        <a class="font-weight-bold" href="/property/{{_id}}">{{name}}</a>
                    </td>
                    <td>{{location}}</td>
                    <td class="text-right">
                        <button type="button"
                            class="btn btn-sm blue darken-2 text-white m-0 mr-2 z-depth-0 js-update-property-button"
                            data-id="{{_id}}" data-name="{{name}}" data-location="{{location}}" data-toggle="modal"
                            data-target=".js-update-property-modal">
                            Edit
                        </button>
                        <button type="button"
                            class="btn btn-sm red darken-3 text-white m-0 z-depth-0 js-delete-property-button"
                            data-id="{{_id}}" data-name="{{name}}" data-location="{{location}}" data-toggle="modal"
                            data-target=".js-delete-property-modal">
                            Delete
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>